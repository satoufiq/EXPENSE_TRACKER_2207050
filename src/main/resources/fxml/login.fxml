<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1200.0"
           styleClass="root-pane"
           stylesheets="@../css/styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.LoginController">
        <HBox alignment="CENTER" spacing="0.0"
              prefHeight="700.0" prefWidth="1200.0">
            <VBox alignment="CENTER"
                  prefWidth="600.0" prefHeight="700.0"
                  styleClass="glass-panel-container">
                <padding>
                    <Insets left="80.0" right="80.0" top="60.0" bottom="60.0"/>
                </padding>
                <VBox alignment="CENTER" spacing="25.0"
                      styleClass="glass-pane frosted-card"
                      maxWidth="440.0">
                    <padding>
                        <Insets top="50.0" left="50.0" right="50.0" bottom="50.0"/>
                    </padding>
                    <VBox alignment="CENTER" spacing="8.0" styleClass="title-block">
                        <Label styleClass="app-title" text="Welcome Back"/>
                        <Label styleClass="app-subtitle"
                               text="Login to your account"/>
                    </VBox>
                    <VBox spacing="20.0">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                        <VBox spacing="8.0">
                            <Label text="Email Address" styleClass="field-label"/>
                            <TextField fx:id="emailField"
                                       promptText="Enter your email"
                                       styleClass="modern-textfield"
                                       prefHeight="45.0"/>
                        </VBox>
                        <VBox spacing="8.0">
                            <Label text="Password" styleClass="field-label"/>
                            <PasswordField fx:id="passwordField"
                                          promptText="Enter your password"
                                          styleClass="modern-textfield"
                                          prefHeight="45.0"/>
                        </VBox>
                        <Label fx:id="errorLabel"
                               styleClass="error-label"
                               text=""
                               wrapText="true"
                               visible="false"
                               managed="false"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="14.0">
                        <VBox.margin>
                            <Insets top="10.0"/>
                        </VBox.margin>
                        <Button fx:id="loginButton"
                                onAction="#handleLogin"
                                styleClass="primary-button glossy-button"
                                text="Login"
                                prefWidth="340.0" prefHeight="48.0"/>
                        <HBox alignment="CENTER" spacing="8.0">
                            <Label text="Don't have an account?" styleClass="link-label"/>
                            <Label text="Register here"
                                   styleClass="link-label-clickable"
                                   onMouseClicked="#handleGoToRegister"
                                   underline="true"/>
                        </HBox>
                        <Button fx:id="backButton"
                                onAction="#handleBack"
                                styleClass="secondary-button glass-button"
                                text="Back to Home"
                                prefWidth="340.0" prefHeight="44.0"/>
                    </VBox>
            </VBox>
            </VBox>
            <VBox alignment="CENTER"
                  prefWidth="600.0" prefHeight="700.0"
                  styleClass="right-panel">
                    <VBox alignment="CENTER" spacing="20.0" styleClass="hero-graphic">
                        <padding>
                            <Insets left="60.0" right="60.0"/>
                        </padding>
                        <HBox alignment="CENTER" styleClass="login-icon-container" prefWidth="200.0" prefHeight="200.0">
                            <Label text="ðŸ”" style="-fx-font-size: 100px;"/>
                        </HBox>
                        <Label text="Secure Access" styleClass="hero-title"/>
                        <Label text="Login to manage your expenses and track your financial goals"
                               styleClass="hero-subtitle"
                               wrapText="true"
                               textAlignment="CENTER"
                               maxWidth="400.0"/>
                    </VBox>
            </VBox>
        </HBox>
</VBox>
