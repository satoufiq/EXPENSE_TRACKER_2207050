<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<ScrollPane fitToWidth="true" fitToHeight="true"
            styleClass="root-pane"
            stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.ModeSelectionController">
    <VBox alignment="CENTER" spacing="0.0" minHeight="700.0" prefWidth="1200.0"
           styleClass="root-pane">
            <VBox alignment="CENTER" spacing="15.0">
                <padding>
                    <Insets bottom="40.0" top="60.0"/>
                </padding>
                <Label fx:id="welcomeLabel"
                       styleClass="app-title"
                       text="Welcome, User"/>
                <Label styleClass="app-subtitle"
                       text="Select your tracking mode"/>
            </VBox>
            <HBox alignment="CENTER" spacing="30.0"
                  prefHeight="400.0">
                <padding>
                    <Insets left="80.0" right="80.0"/>
                </padding>
                <VBox alignment="CENTER" spacing="25.0"
                      styleClass="mode-card"
                      prefWidth="340.0" prefHeight="380.0">
                    <padding>
                        <Insets top="40.0" left="30.0" right="30.0" bottom="40.0"/>
                    </padding>
                    <HBox alignment="CENTER" styleClass="mode-icon-container">
                        <Label text="ðŸ‘¤" style="-fx-font-size: 70px;"/>
                    </HBox>
                    <VBox alignment="CENTER" spacing="12.0">
                        <Label text="Personal Mode" styleClass="mode-title"/>
                        <Label text="Track your personal expenses independently"
                               styleClass="mode-description"
                               wrapText="true"
                               textAlignment="CENTER"
                               maxWidth="280.0"/>
                    </VBox>
                    <Button fx:id="personalModeButton"
                            onAction="#handlePersonalMode"
                            styleClass="mode-button primary-button glossy-button"
                            text="Start Personal Tracking"
                            prefWidth="280.0" prefHeight="50.0"/>
                    </VBox>
                <VBox alignment="CENTER" spacing="25.0"
                      styleClass="mode-card"
                      prefWidth="340.0" prefHeight="380.0">
                    <padding>
                        <Insets top="40.0" left="30.0" right="30.0" bottom="40.0"/>
                    </padding>
                    <HBox alignment="CENTER" styleClass="mode-icon-container">
                        <Label text="ðŸ‘¥" style="-fx-font-size: 70px;"/>
                    </HBox>
                    <VBox alignment="CENTER" spacing="12.0">
                        <Label text="Group Mode" styleClass="mode-title"/>
                        <Label text="Collaborate and share expenses with groups"
                               styleClass="mode-description"
                               wrapText="true"
                               textAlignment="CENTER"
                               maxWidth="280.0"/>
                    </VBox>
                    <Button fx:id="groupModeButton"
                            onAction="#handleGroupMode"
                            styleClass="mode-button primary-button glossy-button"
                            text="Manage Group Expenses"
                            prefWidth="280.0" prefHeight="50.0"/>
                    </VBox>
                <VBox fx:id="parentModeCard"
                      alignment="CENTER" spacing="25.0"
                      styleClass="mode-card"
                      prefWidth="340.0" prefHeight="380.0"
                      visible="false" managed="false">
                    <padding>
                        <Insets top="40.0" left="30.0" right="30.0" bottom="40.0"/>
                    </padding>
                    <HBox alignment="CENTER" styleClass="mode-icon-container">
                        <Label text="ðŸ‘¨â€ðŸ‘©â€ðŸ‘§â€ðŸ‘¦" style="-fx-font-size: 70px;"/>
                    </HBox>
                    <VBox alignment="CENTER" spacing="12.0">
                        <Label text="Parent Mode" styleClass="mode-title"/>
                        <Label text="Monitor and manage your children's expenses"
                               styleClass="mode-description"
                               wrapText="true"
                               textAlignment="CENTER"
                               maxWidth="280.0"/>
                    </VBox>
                    <Button fx:id="parentModeButton"
                            onAction="#handleParentMode"
                            styleClass="mode-button primary-button glossy-button"
                            text="View Children's Activity"
                            prefWidth="280.0" prefHeight="50.0"/>
                    </VBox>
            </HBox>
            <VBox alignment="CENTER" spacing="10.0">
                <padding>
                    <Insets top="20.0" bottom="40.0"/>
                </padding>
                <HBox alignment="CENTER" spacing="20.0">
                    <HBox fx:id="alertButtonContainer" alignment="CENTER" styleClass="alert-button-container">
                        <Button fx:id="alertsButton"
                                onAction="#handleAlerts"
                                styleClass="alert-button"
                                text="ðŸ”” View Alerts"
                                prefWidth="200.0" prefHeight="44.0"/>
                        <Label fx:id="alertBadge" styleClass="alert-badge" text="0" visible="false" managed="false" translateX="-25" translateY="-15"/>
                    </HBox>
                    <Button fx:id="logoutButton"
                            onAction="#handleLogout"
                            styleClass="secondary-button glass-button"
                            text="Logout"
                            prefWidth="200.0" prefHeight="44.0"/>
                </HBox>
            </VBox>
    </VBox>
</ScrollPane>
