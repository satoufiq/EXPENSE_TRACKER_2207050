<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.ViewMembersController"
            prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@../css/styles.css">
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="transparent-scroll">
            <VBox alignment="TOP_CENTER" spacing="20.0">
                <padding>
                    <Insets top="30.0" left="40.0" right="40.0" bottom="30.0"/>
                </padding>

                <!-- Header -->
                <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header">
                    <padding>
                        <Insets top="15.0" bottom="15.0" left="25.0" right="25.0"/>
                    </padding>
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label text="ðŸ‘¥ Group Members" styleClass="dashboard-title"/>
                        <Label fx:id="groupNameLabel" text="Group Name" styleClass="dashboard-subtitle"/>
                    </VBox>
                    <HBox spacing="15.0" alignment="CENTER_RIGHT">
                        <Button text="âž• Add Member" onAction="#handleAddMember" styleClass="primary-button" prefHeight="40.0"/>
                        <Button text="â† Back" onAction="#handleBack" styleClass="secondary-button" prefHeight="40.0"/>
                    </HBox>
                </HBox>

                <!-- Stats Row -->
                <HBox spacing="20.0" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="8.0" styleClass="stat-card" prefWidth="200.0" prefHeight="100.0">
                        <Label text="ðŸ‘¥" style="-fx-font-size: 28px;"/>
                        <Label text="Total Members" styleClass="stat-label"/>
                        <Label fx:id="memberCountLabel" text="0" styleClass="stat-value" style="-fx-font-size: 24px;"/>
                    </VBox>
                    <VBox alignment="CENTER" spacing="8.0" styleClass="stat-card" prefWidth="200.0" prefHeight="100.0">
                        <Label text="ðŸ‘‘" style="-fx-font-size: 28px;"/>
                        <Label text="Admins" styleClass="stat-label"/>
                        <Label fx:id="adminCountLabel" text="0" styleClass="stat-value" style="-fx-font-size: 24px;"/>
                    </VBox>
                </HBox>

                <!-- Members List -->
                <VBox spacing="15.0" VBox.vgrow="ALWAYS" styleClass="glass-container-elevated">
                    <padding>
                        <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
                    </padding>
                    <Label text="Members" styleClass="section-title"/>

                    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="card-scroll-pane" prefHeight="350.0">
                        <VBox fx:id="memberCardsPane" spacing="12" styleClass="child-cards-container">
                            <padding>
                                <Insets top="5.0" left="5.0" right="5.0" bottom="5.0"/>
                            </padding>
                        </VBox>
                    </ScrollPane>

                    <!-- Empty state placeholder -->
                    <VBox fx:id="emptyStatePane" alignment="CENTER" spacing="15.0" styleClass="empty-state-card" visible="false" managed="false">
                        <Label text="ðŸ‘¥" style="-fx-font-size: 50px; opacity: 0.5;"/>
                        <Label text="No members yet" styleClass="placeholder-text"/>
                        <Label text="Add members to this group" styleClass="placeholder-subtext"/>
                        <Button onAction="#handleAddMember" styleClass="primary-button" text="Add First Member" prefHeight="40.0"/>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>

