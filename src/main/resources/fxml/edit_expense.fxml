<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.EditExpenseController"
            styleClass="root-pane"
            stylesheets="@../css/styles.css"
            prefWidth="500"
            prefHeight="600">
    <center>
        <VBox spacing="20" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="30" right="40" bottom="30" left="40"/>
                    </padding>
                    <VBox spacing="5" alignment="CENTER">
                        <Label text="âœï¸" style="-fx-font-size: 48px;"/>
                        <Label fx:id="titleLabel" text="Edit Expense" styleClass="dashboard-title"/>
                        <Label text="Update expense details" styleClass="dashboard-subtitle"/>
                    </VBox>
                    <Separator/>
                    <VBox spacing="20" styleClass="form-container">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <VBox spacing="8">
                            <Label text="Category *" styleClass="form-label">
                                <font>
                                    <Font name="System Bold" size="14"/>
                                </font>
                            </Label>
                            <ComboBox fx:id="categoryComboBox"
                                     promptText="Select a category"
                                     maxWidth="Infinity"
                                     styleClass="modern-combo"/>
                        </VBox>
                        <VBox spacing="8">
                            <Label text="Amount *" styleClass="form-label">
                                <font>
                                    <Font name="System Bold" size="14"/>
                                </font>
                            </Label>
                            <TextField fx:id="amountField"
                                      promptText="Enter amount (e.g., 25.50)"
                                      styleClass="modern-text-field"/>
                        </VBox>
                        <VBox spacing="8">
                            <Label text="Date *" styleClass="form-label">
                                <font>
                                    <Font name="System Bold" size="14"/>
                                </font>
                            </Label>
                            <DatePicker fx:id="datePicker"
                                       maxWidth="Infinity"
                                       promptText="Select date"
                                       styleClass="modern-date-picker"/>
                        </VBox>
                        <VBox spacing="8">
                            <Label text="Note (Optional)" styleClass="form-label">
                                <font>
                                    <Font name="System Bold" size="14"/>
                                </font>
                            </Label>
                            <TextArea fx:id="noteArea"
                                     promptText="Add a note about this expense..."
                                     prefHeight="100"
                                     wrapText="true"
                                     styleClass="modern-text-area"/>
                        </VBox>
                        <HBox spacing="15" alignment="CENTER">
                            <padding>
                                <Insets top="20"/>
                            </padding>
                            <Button fx:id="saveButton"
                                   text="ðŸ’¾ Update Expense"
                                   onAction="#handleSave"
                                   styleClass="primary-button"
                                   prefWidth="180"
                                   prefHeight="45"/>
                            <Button fx:id="cancelButton"
                                   text="âœ– Cancel"
                                   onAction="#handleCancel"
                                   styleClass="secondary-button"
                                   prefWidth="140"
                                   prefHeight="45"/>
                        </HBox>
                    </VBox>
                </VBox>
    </center>
</BorderPane>