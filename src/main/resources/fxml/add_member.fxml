<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="500.0" prefWidth="700.0" styleClass="root-pane" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.AddMemberDialogController">
    <StackPane styleClass="background-container">
        <StackPane styleClass="background-shape shape-1"/>
        <StackPane styleClass="background-shape shape-2"/>
        <StackPane styleClass="background-overlay"/>
    </StackPane>
    <VBox spacing="20.0" alignment="CENTER">
        <padding>
            <Insets top="40.0" left="50.0" right="50.0" bottom="40.0"/>
        </padding>
        <VBox spacing="10.0" alignment="CENTER">
            <Label text="Add Member to Group" styleClass="section-title" style="-fx-font-size: 24px;"/>
            <Label text="Invite a member by email or user ID" styleClass="dashboard-subtitle" style="-fx-font-size: 13px;"/>
        </VBox>
        <VBox spacing="20.0" styleClass="glass-container-elevated frosted-card" prefWidth="600.0">
            <padding>
                <Insets top="30.0" left="30.0" right="30.0" bottom="30.0"/>
            </padding>
            <VBox spacing="12.0">
                <Label text="Choose how to add member:" styleClass="stat-label" style="-fx-font-size: 13px;"/>
                <HBox spacing="30.0">
                    <RadioButton fx:id="byEmailRadio" text="By Email" selected="true" style="-fx-font-size: 13px;"/>
                    <RadioButton fx:id="byUserIdRadio" text="By User ID" style="-fx-font-size: 13px;"/>
                </HBox>
            </VBox>
            <VBox fx:id="emailSection" spacing="10.0">
                <Label text="Email Address" styleClass="stat-label" style="-fx-font-size: 13px;"/>
                <TextField fx:id="emailField" promptText="Enter member's email address" styleClass="input-field" prefHeight="40.0"/>
            </VBox>
            <VBox fx:id="userIdSection" spacing="10.0" visible="false" managed="false">
                <Label text="User ID" styleClass="stat-label" style="-fx-font-size: 13px;"/>
                <TextField fx:id="userIdField" promptText="Enter member's unique user ID" styleClass="input-field" prefHeight="40.0"/>
                <Label fx:id="userIdHint" text="You can find user IDs in member profiles" styleClass="placeholder-subtext" style="-fx-font-size: 11px;"/>
            </VBox>
            <VBox spacing="8.0">
                <Label fx:id="errorLabel" text="" style="-fx-text-fill: #ff6b6b; -fx-font-size: 12px;" wrapText="true" visible="false" managed="false"/>
                <Label fx:id="successLabel" text="" style="-fx-text-fill: #51cf66; -fx-font-size: 12px;" wrapText="true" visible="false" managed="false"/>
            </VBox>
            <Region VBox.vgrow="ALWAYS"/>
            <HBox spacing="15.0" alignment="CENTER_RIGHT">
                <Button text="Add Member" onAction="#handleAddMember" styleClass="primary-button glossy-button" prefHeight="45.0" prefWidth="150.0"/>
                <Button text="Cancel" onAction="#handleCancel" styleClass="secondary-button" prefHeight="45.0" prefWidth="120.0"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>

