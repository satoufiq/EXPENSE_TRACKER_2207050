<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.PersonalDashboardController">

    <center>
        <StackPane>
            <children>
                <StackPane styleClass="background-container">
                    <children>
                        <StackPane styleClass="background-shape shape-1"/>
                        <StackPane styleClass="background-shape shape-2"/>
                        <StackPane styleClass="background-overlay"/>
                    </children>
                </StackPane>

                <VBox spacing="20.0" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="30.0" left="40.0" right="40.0" bottom="30.0"/>
                    </padding>

                    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header">
                        <padding>
                            <Insets top="15.0" bottom="15.0" left="25.0" right="25.0"/>
                        </padding>

                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label fx:id="userNameLabel"
                                   styleClass="dashboard-title"
                                   text="Personal Dashboard"/>
                            <Label fx:id="modeLabel"
                                   styleClass="dashboard-subtitle"
                                   text="Personal Mode"/>
                        </VBox>

                        <HBox spacing="15.0" alignment="CENTER_RIGHT">
                            <Button fx:id="addExpenseButton"
                                    styleClass="primary-button"
                                    text="âž• Add Expense"
                                    prefHeight="40.0"
                                    prefWidth="150.0"/>
                            <Button fx:id="viewAnalyticsButton"
                                    styleClass="glass-button"
                                    text="ðŸ“Š Analytics"
                                    prefHeight="40.0"
                                    prefWidth="130.0"/>
                            <Button fx:id="backButton"
                                    styleClass="secondary-button"
                                    text="â† Back"
                                    prefHeight="40.0"
                                    prefWidth="100.0"
                                    onAction="#handleBack"/>
                        </HBox>
                    </HBox>

                    <HBox spacing="20.0" alignment="CENTER" prefHeight="140.0">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>

                        <VBox alignment="CENTER" spacing="10.0"
                              styleClass="stat-card"
                              prefWidth="280.0"
                              prefHeight="120.0">
                            <padding>
                                <Insets top="20.0" bottom="20.0"/>
                            </padding>
                            <Label text="ðŸ’°"
                                   style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, rgba(255,215,0,0.4), 15, 0.6, 0, 0);"/>
                            <Label text="Total Expenses"
                                   styleClass="stat-label"/>
                            <Label fx:id="totalExpensesLabel"
                                   text="\$0.00"
                                   styleClass="stat-value"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0"
                              styleClass="stat-card"
                              prefWidth="280.0"
                              prefHeight="120.0">
                            <padding>
                                <Insets top="20.0" bottom="20.0"/>
                            </padding>
                            <Label text="ðŸ“…"
                                   style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, rgba(123,136,255,0.4), 15, 0.6, 0, 0);"/>
                            <Label text="This Month"
                                   styleClass="stat-label"/>
                            <Label fx:id="monthExpensesLabel"
                                   text="\$0.00"
                                   styleClass="stat-value"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0"
                              styleClass="stat-card"
                              prefWidth="280.0"
                              prefHeight="120.0">
                            <padding>
                                <Insets top="20.0" bottom="20.0"/>
                            </padding>
                            <Label text="ðŸ“†"
                                   style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, rgba(0,255,200,0.4), 15, 0.6, 0, 0);"/>
                            <Label text="This Week"
                                   styleClass="stat-label"/>
                            <Label fx:id="weekExpensesLabel"
                                   text="\$0.00"
                                   styleClass="stat-value"/>
                        </VBox>

                        <VBox alignment="CENTER" spacing="10.0"
                              styleClass="stat-card"
                              prefWidth="280.0"
                              prefHeight="120.0">
                            <padding>
                                <Insets top="20.0" bottom="20.0"/>
                            </padding>
                            <Label text="ðŸ§¾"
                                   style="-fx-font-size: 36px; -fx-effect: dropshadow(gaussian, rgba(255,150,255,0.4), 15, 0.6, 0, 0);"/>
                            <Label text="Transactions"
                                   styleClass="stat-label"/>
                            <Label fx:id="transactionCountLabel"
                                   text="0"
                                   styleClass="stat-value"/>
                        </VBox>
                    </HBox>

                    <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>

                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="Recent Expenses"
                                   styleClass="section-title"/>
                            <Button fx:id="viewAllButton"
                                    styleClass="link-button"
                                    text="View All â†’"/>
                        </HBox>

                        <StackPane styleClass="table-container" VBox.vgrow="ALWAYS">
                            <TableView fx:id="expensesTable"
                                      styleClass="modern-table"
                                      prefHeight="300.0">
                                <columns>
                                    <TableColumn fx:id="dateColumn"
                                               text="Date"
                                               prefWidth="120.0"/>
                                    <TableColumn fx:id="categoryColumn"
                                               text="Category"
                                               prefWidth="180.0"/>
                                    <TableColumn fx:id="amountColumn"
                                               text="Amount"
                                               prefWidth="130.0"/>
                                    <TableColumn fx:id="noteColumn"
                                               text="Note"
                                               prefWidth="380.0"/>
                                    <TableColumn fx:id="actionsColumn"
                                               text="Actions"
                                               prefWidth="200.0"/>
                                </columns>
                                <placeholder>
                                    <VBox alignment="CENTER" spacing="15.0">
                                        <padding>
                                            <Insets top="40.0" bottom="40.0"/>
                                        </padding>
                                        <Label text="ðŸ“"
                                               style="-fx-font-size: 48px; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 20, 0.5, 0, 0);"/>
                                        <Label text="No expenses yet"
                                               styleClass="placeholder-text"/>
                                        <Label text="Click 'Add Expense' to create your first entry"
                                               styleClass="placeholder-subtext"/>
                                    </VBox>
                                </placeholder>
                            </TableView>
                        </StackPane>
                    </VBox>
                </VBox>
            </children>
        </StackPane>
    </center>
</BorderPane>
