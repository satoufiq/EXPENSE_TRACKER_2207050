<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.GroupMemberListController">
    <center>
        <VBox spacing="20.0" alignment="TOP_CENTER">
                    <padding>
                        <Insets top="30.0" left="40.0" right="40.0" bottom="30.0"/>
                    </padding>
                    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="dashboard-header">
                        <padding>
                            <Insets top="15.0" bottom="15.0" left="25.0" right="25.0"/>
                        </padding>
                        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                            <Label fx:id="groupNameLabel"
                                   styleClass="dashboard-title"
                                   text="Group Members"/>
                            <Label fx:id="memberCountLabel"
                                   styleClass="dashboard-subtitle"
                                   text="0 members"/>
                        </VBox>
                        <HBox spacing="15.0" alignment="CENTER_RIGHT">
                            <Button fx:id="addMemberButton"
                                    styleClass="primary-button"
                                    text="âž• Add Member"
                                    prefHeight="40.0"
                                    prefWidth="150.0"
                                    onAction="#handleAddMember"/>
                            <Button fx:id="backButton"
                                    styleClass="secondary-button"
                                    text="â† Back"
                                    prefHeight="40.0"
                                    prefWidth="100.0"
                                    onAction="#handleBack"/>
                        </HBox>
                    </HBox>
                    <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                        <padding>
                            <Insets top="10.0"/>
                        </padding>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                            <Label text="All Members"
                                   styleClass="section-title"/>
                        </HBox>
                        <VBox styleClass="table-container" VBox.vgrow="ALWAYS">
                            <TableView fx:id="membersTable"
                                      styleClass="modern-table"
                                      prefHeight="500.0">
                                <columns>
                                    <TableColumn fx:id="nameColumn"
                                               text="Name"
                                               prefWidth="250.0"/>
                                    <TableColumn fx:id="emailColumn"
                                               text="Email"
                                               prefWidth="300.0"/>
                                    <TableColumn fx:id="roleColumn"
                                               text="Role"
                                               prefWidth="150.0"/>
                                    <TableColumn fx:id="actionsColumn"
                                               text="Actions"
                                               prefWidth="200.0"/>
                                </columns>
                                <placeholder>
                                    <VBox alignment="CENTER" spacing="15.0">
                                        <padding>
                                            <Insets top="40.0" bottom="40.0"/>
                                        </padding>
                                        <Label text="ðŸ‘¥"
                                               style="-fx-font-size: 48px; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 20, 0.5, 0, 0);"/>
                                        <Label text="No members yet"
                                               styleClass="placeholder-text"/>
                                        <Label text="Click 'Add Member' to invite members to this group"
                                               styleClass="placeholder-subtext"/>
                                    </VBox>
                                </placeholder>
                            </TableView>
                        </VBox>
                    </VBox>
                </VBox>
    </center>
</BorderPane>