<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane prefHeight="700.0" prefWidth="1200.0"
           styleClass="root-pane"
           stylesheets="@../css/styles.css"
           xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.AlertsController">
    <children>
        <StackPane styleClass="background-container">
            <children>
                <StackPane styleClass="background-shape shape-1"/>
                <StackPane styleClass="background-shape shape-2"/>
                <StackPane styleClass="background-overlay"/>
            </children>
        </StackPane>
        <VBox alignment="TOP_LEFT" spacing="12.0"
              prefHeight="700.0" prefWidth="1200.0">
            <padding>
                <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
            </padding>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Button fx:id="backButton" text="â† Back" styleClass="secondary-button glass-button"/>
                <Label text="Alerts &amp; Invitations" styleClass="app-title"/>
            </HBox>
            <Separator />
            <HBox spacing="40.0" alignment="TOP_LEFT">
                <VBox spacing="8.0" prefWidth="360.0">
                    <Label text="Parent Invites" styleClass="section-title"/>
                    <ListView fx:id="parentInvitesList" prefHeight="460.0"/>
                    <HBox spacing="8.0">
                        <Button fx:id="acceptParentInviteButton" text="Accept" disable="true" styleClass="primary-button glossy-button"/>
                        <Button fx:id="declineParentInviteButton" text="Decline" disable="true" styleClass="secondary-button glass-button"/>
                    </HBox>
                </VBox>
                <VBox spacing="8.0" prefWidth="360.0">
                    <Label text="Group Invites" styleClass="section-title"/>
                    <ListView fx:id="groupInvitesList" prefHeight="460.0"/>
                    <HBox spacing="8.0">
                        <Button fx:id="acceptGroupInviteButton" text="Accept" disable="true" styleClass="primary-button glossy-button"/>
                        <Button fx:id="declineGroupInviteButton" text="Decline" disable="true" styleClass="secondary-button glass-button"/>
                    </HBox>
                </VBox>
                <VBox spacing="8.0" prefWidth="360.0">
                    <Label text="Financial Alerts" styleClass="section-title"/>
                    <ListView fx:id="financialAlertsList" prefHeight="460.0"/>
                    <HBox spacing="8.0">
                        <Button fx:id="dismissAlertButton" text="Dismiss" disable="true" styleClass="secondary-button glass-button"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </children>
</StackPane>
