<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<ScrollPane fitToWidth="true" fitToHeight="true"
            styleClass="root-pane"
            stylesheets="@../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controller.GroupSelectionController">
    <VBox alignment="TOP_CENTER" spacing="25.0" minHeight="700.0" prefWidth="1200.0"
           styleClass="root-pane">
            <padding>
                <Insets top="30.0" left="100.0" right="100.0" bottom="50.0"/>
            </padding>
            <!-- Header with back button and alerts -->
            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Button fx:id="backButton"
                        onAction="#handleBack"
                        styleClass="secondary-button glass-button"
                        text="â† Back to Mode Selection"
                        prefWidth="250.0" prefHeight="44.0"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox fx:id="alertButtonContainer" alignment="CENTER" styleClass="alert-button-container">
                    <Button fx:id="alertButton" styleClass="alert-button" text="ðŸ””" prefHeight="44.0" prefWidth="50.0" onAction="#handleViewAlerts"/>
                    <Label fx:id="alertBadge" styleClass="alert-badge" text="0" visible="false" managed="false" translateX="-18" translateY="-15"/>
                </HBox>
            </HBox>
            <VBox alignment="CENTER" spacing="15.0">
                <Label styleClass="app-title" text="Group Selection"/>
                <Label styleClass="app-subtitle"
                       text="Select a group or create a new one to start tracking shared expenses"/>
                <Label styleClass="placeholder-subtext"
                       text="ðŸ’¡ Tip: Double-click a group or select and click 'Open Group Dashboard' below"
                       style="-fx-font-size: 12px; -fx-font-style: italic;"/>
            </VBox>
            <VBox spacing="30.0"
                  styleClass="glass-container-elevated frosted-card"
                  prefWidth="900.0"
                  VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="40.0" left="50.0" right="50.0" bottom="40.0"/>
                </padding>
                <HBox spacing="20.0" alignment="CENTER">
                    <Button fx:id="createGroupButton"
                            onAction="#handleCreateGroup"
                            styleClass="primary-button glossy-button"
                            text="+ Create New Group"
                            prefWidth="220.0" prefHeight="48.0"/>
                    <Button fx:id="refreshButton"
                            onAction="#handleRefresh"
                            styleClass="secondary-button glass-button"
                            text="ðŸ”„ Refresh"
                            prefWidth="150.0" prefHeight="48.0"/>
                </HBox>
                <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                    <Label text="Your Groups" styleClass="section-title"/>
                    <VBox styleClass="list-container" VBox.vgrow="ALWAYS">
                        <ListView fx:id="groupsListView"
                                 styleClass="modern-list"
                                 prefHeight="350.0">
                            <placeholder>
                                <VBox alignment="CENTER" spacing="15.0">
                                    <padding>
                                        <Insets top="50.0" bottom="50.0"/>
                                    </padding>
                                    <Label text="ðŸ‘¥" style="-fx-font-size: 60px; -fx-effect: dropshadow(gaussian, rgba(255,255,255,0.3), 10, 0.5, 0, 0);"/>
                                    <Label text="No groups yet" styleClass="placeholder-text"/>
                                    <Label text="Create a new group to start collaborating on expenses"
                                           styleClass="placeholder-subtext"/>
                                    <Button onAction="#handleCreateGroup"
                                            styleClass="primary-button glossy-button"
                                            text="Create Your First Group"
                                            prefWidth="220.0" prefHeight="45.0">
                                        <VBox.margin>
                                            <Insets top="10.0"/>
                                        </VBox.margin>
                                    </Button>
                                </VBox>
                            </placeholder>
                        </ListView>
                    </VBox>
                    <VBox spacing="8.0" alignment="CENTER">
                        <Label text="ðŸ‘† Select a group from the list above, then:"
                               styleClass="placeholder-subtext"
                               style="-fx-font-size: 12px;"/>
                    </VBox>
                    <HBox spacing="15.0" alignment="CENTER">
                        <Button fx:id="selectGroupButton"
                                onAction="#handleSelectGroup"
                                styleClass="primary-button glossy-button"
                                text="ðŸ“Š Open Group Dashboard"
                                prefWidth="220.0" prefHeight="45.0"
                                disable="true"/>
                        <Button fx:id="viewMembersButton"
                                onAction="#handleViewMembers"
                                styleClass="secondary-button glass-button"
                                text="ðŸ‘¥ View Members"
                                prefWidth="160.0" prefHeight="45.0"
                                disable="true"/>
                        <Button fx:id="leaveGroupButton"
                                onAction="#handleLeaveGroup"
                                styleClass="secondary-button glass-button"
                                text="ðŸšª Leave Group"
                                prefWidth="160.0" prefHeight="45.0"
                                disable="true"
                                style="-fx-text-fill: #ff6b6b;"/>
                    </HBox>
                </VBox>
            </VBox>
    </VBox>
</ScrollPane>
