<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane prefHeight="700.0" prefWidth="1200.0"
           styleClass="root-pane"
           stylesheets="@../css/styles.css"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.controller.HomeController">

    <children>

        <!-- ðŸ”µ Background gradient + abstract blur shapes -->
        <StackPane styleClass="background-container">
            <children>
                <StackPane styleClass="background-shape shape-1"/>
                <StackPane styleClass="background-shape shape-2"/>
                <StackPane styleClass="background-overlay"/>
            </children>
        </StackPane>


        <HBox alignment="CENTER_LEFT" spacing="0.0"
              prefHeight="700.0" prefWidth="1200.0">

            <!-- ðŸ§Š Left frosted glass section -->
            <VBox alignment="CENTER"
                  prefWidth="500.0" prefHeight="700.0"
                  styleClass="glass-panel-container">

                <padding>
                    <Insets left="80.0" right="40.0" top="60.0" bottom="60.0"/>
                </padding>

                <!-- Main frosted card -->
                <VBox alignment="CENTER" spacing="30.0"
                      styleClass="glass-pane frosted-card"
                      maxWidth="340.0">

                    <padding>
                        <Insets top="50.0" left="40.0" right="40.0" bottom="50.0"/>
                    </padding>

                    <!-- Title block -->
                    <VBox alignment="CENTER" spacing="12.0" styleClass="title-block">
                        <Label styleClass="app-title" text="Expense Tracker"/>
                        <Label styleClass="app-subtitle"
                               text="Personal Finance Manager"/>
                    </VBox>

                    <!-- Buttons -->
                    <VBox alignment="CENTER" spacing="14.0">
                        <VBox.margin>
                            <Insets top="20.0"/>
                        </VBox.margin>

                        <Button fx:id="loginButton"
                                onAction="#handleLogin"
                                styleClass="primary-button glossy-button"
                                text="Login"
                                prefWidth="260.0" prefHeight="48.0"/>

                        <Button fx:id="registerButton"
                                onAction="#handleRegister"
                                styleClass="secondary-button glass-button"
                                text="Register"
                                prefWidth="260.0" prefHeight="48.0"/>

                        <Button fx:id="exitButton"
                                onAction="#handleExit"
                                styleClass="exit-button glass-button"
                                text="Exit"
                                prefWidth="260.0" prefHeight="48.0"/>
                    </VBox>

                </VBox>
            </VBox>

            <!-- ðŸ–¼ï¸ Right-side modern image/visual block -->
            <VBox alignment="CENTER_RIGHT"
                  prefWidth="700.0" prefHeight="700.0"
                  styleClass="right-panel">
                <children>
                    <StackPane styleClass="hero-graphic"/>
                </children>
            </VBox>

        </HBox>
    </children>
</StackPane>
