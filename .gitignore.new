.idea/workspace.xml
.idea/tasks.xml
.idea/usage.statistics.xml
.idea/dictionaries/
.idea/shelf/
.idea/sonarlint/
.idea/copilot/**
.idea/*.xml

# IntelliJ module files
*.iws
*.iml
*.ipr

# Build output
out/

